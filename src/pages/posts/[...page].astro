---
import BaseHead from '../../components/Head/BaseHead.astro';
import Nav from '../../components/Nav.astro';
import HomeHeader from '../../components/HomeHeader.astro';
import Footer from '../../components/Footer/Footer.astro';
import PokeInfo from '../../components/pokeInfo.astro';

let pageTitle = 'All Pokemons';
let pageDescription = `page of all Pokemons`;
let seoTitle = 'Pokemons';
let seoDescription = '';
---

<html lang="en">

<head>
  <BaseHead title={seoTitle} description={seoDescription} />
</head>

<body class="bg-white text-black font-body leading-normal personality-casual">
  <Nav />

  <main class="py-12 lg:py-20">
    <article class="max-w-6xl mx-auto px-3">
      <HomeHeader title={pageTitle} description={pageDescription} />
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <PokeInfo id={1} />
        <PokeInfo id={4} />
        <PokeInfo id={7} />
        <PokeInfo id={10} />
        <PokeInfo id={13} />
        <PokeInfo id={16} />
        <PokeInfo id={21} />
        <PokeInfo id={23} />
        <PokeInfo id={25} />

      </section>
    </article>
  </main>
  
  <Footer />
</body>

</html>
