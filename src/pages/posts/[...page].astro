        <PokeInfo id={13}/>
        <PokeInfo id={22}/>
        <PokeInfo id={23}/>
        <PokeInfo id={25}/>
        <PokeInfo id={29}/>
        <PokeInfo id={32}/>
        <PokeInfo id={35}/>
        <PokeInfo id={39}/>
        <PokeInfo id={41}/>
        <PokeInfo id={43}/>
        
      </section>
    </article>
  </main>
  <Paginator page={page} />
  <Footer />
</body>

</html>
