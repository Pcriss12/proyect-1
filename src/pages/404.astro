---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer/Footer.astro'

let title = 'How To Code';
let description = '';
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12 lg:py-20">
      <article class="max-w-6xl mx-auto px-3">
        <header class="mx-auto max-w-3xl text-center content">
          <h1 class="mb-4">You're up 404</h1>
          <p>Not much to see here!</p>
          <div class="embed-responsive aspect-ratio-4/3">
            <img src="../../public/images/mytopkid.com-pokemon-cliparts-64-800x1003.png" class="rounded-xl mx-auto" style="min-width: 30%;" loading="lazy"  referrerpolicy="no-referrer" />
          </div>
        </header>
      </article>
    </main>
    <Footer />
  </body>
</html>
